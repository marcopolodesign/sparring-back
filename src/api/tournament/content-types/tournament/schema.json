{
  "kind": "collectionType",
  "collectionName": "tournaments",
  "info": {
    "singularName": "tournament",
    "pluralName": "tournaments",
    "displayName": "Tournament"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "start_date": {
      "type": "date"
    },
    "end_date": {
      "type": "date"
    },
    "location": {
      "type": "component",
      "repeatable": true,
      "component": "location.location"
    },
    "sport": {
      "type": "component",
      "repeatable": true,
      "component": "sports.sport"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "participants": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "tournaments"
    },
    "matches": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::match.match"
    },
    "sponsors": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": true
    }
  }
}
